{
  "dynamic": "true",
  "dynamic_templates": [
    {
      "detection_fields": {
        "path_match": "document.detection.*",
        "path_unmatch": "document.detection.condition",
        "mapping": {
          "type": "object",
          "enabled": false
        }
      }
    }
  ],
  "properties": {
    "document": {
      "type": "object",
      "properties": {
        "id": {
          "type": "keyword"
        },
        "sigma_id": {
          "type": "keyword"
        },
        "title": {
          "type": "keyword"
        },
        "description": {
          "type": "text"
        },
        "author": {
          "type": "keyword"
        },
        "date": {
          "type": "date"
        },
        "modified": {
          "type": "date"
        },
        "status": {
          "type": "keyword"
        },
        "level": {
          "type": "keyword"
        },
        "enabled": {
          "type": "boolean"
        },
        "falsepositives": {
          "type": "keyword"
        },
        "tags": {
          "type": "keyword"
        },
        "references": {
          "type": "keyword"
        },
        "logsource": {
          "type": "object",
          "properties": {
            "category": {
              "type": "keyword"
            },
            "product": {
              "type": "keyword"
            },
            "service": {
              "type": "keyword"
            },
            "definition": {
              "type": "text"
            }
          }
        },
        "detection": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "condition": {
              "type": "keyword"
            }
          }
        },
        "related": {
          "type": "nested",
          "properties": {
            "type": {
              "type": "keyword"
            },
            "id": {
              "type": "keyword"
            }
          }
        },
        "fields": {
          "type": "keyword"
        },
        "name": {
          "type": "keyword"
        },
        "taxonomy": {
          "type": "keyword"
        },
        "license": {
          "type": "keyword"
        },
        "scope": {
          "type": "keyword"
        }
      }
    },
    "hash.sha256": {
      "type": "keyword"
    },
    "space.name": {
      "type": "keyword"
    }
  }
}
