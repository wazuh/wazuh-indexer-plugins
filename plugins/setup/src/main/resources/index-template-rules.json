{
  "index_patterns": [
    "wazuh-rules*"
  ],
  "mappings": {
    "date_detection": false,
    "dynamic": "strict",
    "properties": {
      "rule": {
        "properties": {
          "body": {
            "type": "object"
          },
          "created_at": {
            "type": "date"
          },
          "id": {
            "type": "integer"
          },
          "name": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      }
    }
  },
  "order": 1,
  "settings": {
    "index": {
      "number_of_replicas": "0",
      "number_of_shards": "1",
      "query.default_field": [
        "rule.name"
      ],
      "refresh_interval": "5s"
    }
  }
}
