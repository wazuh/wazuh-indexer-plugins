{
  "index_patterns": [
    "wazuh-states-inventory-hotfixes*"
  ],
  "mappings": {
    "date_detection": false,
    "dynamic": "strict",
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "agent": {
        "properties": {
          "groups": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "id": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "package": {
        "properties": {
          "hotfix": {
            "properties": {
              "name": {
                "ignore_above": 1024,
                "type": "keyword"
              }
            },
            "type": "object"
          }
        }
      }
    }
  },
  "order": 1,
  "settings": {
    "index": {
      "number_of_replicas": "0",
      "number_of_shards": "1",
      "query.default_field": [
        "package.hotfix.name"
      ],
      "refresh_interval": "5s"
    }
  }
}
