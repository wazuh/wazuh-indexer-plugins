{
  "index_patterns": [
    "wazuh-states-inventory-ports*"
  ],
  "mappings": {
    "date_detection": false,
    "dynamic": "strict",
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "agent": {
        "properties": {
          "groups": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "id": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "destination": {
        "properties": {
          "ip": {
            "type": "ip"
          },
          "port": {
            "type": "long"
          }
        }
      },
      "device": {
        "properties": {
          "id": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "file": {
        "properties": {
          "inode": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "host": {
        "properties": {
          "network": {
            "properties": {
              "ingress": {
                "properties": {
                  "queue": {
                    "type": "long"
                  }
                }
              }
            }
          }
        }
      },
      "network": {
        "properties": {
          "protocol": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      },
      "process": {
        "properties": {
          "name": {
            "fields": {
              "text": {
                "type": "match_only_text"
              }
            },
            "ignore_above": 1024,
            "type": "keyword"
          },
          "pid": {
            "type": "long"
          }
        }
      },
      "source": {
        "properties": {
          "ip": {
            "type": "ip"
          },
          "port": {
            "type": "long"
          }
        }
      }
    }
  },
  "order": 1,
  "settings": {
    "index": {
      "number_of_replicas": "0",
      "number_of_shards": "1",
      "query.default_field": [
        "agent.id",
        "agent.groups",
        "process.name",
        "source.ip",
        "destination.ip"
      ],
      "refresh_interval": "5s"
    }
  }
}
