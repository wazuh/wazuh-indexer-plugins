{
  "index_patterns": [
    "wazuh-policies*"
  ],
  "mappings": {
    "date_detection": false,
    "dynamic": "strict",
    "properties": {
      "policy": {
        "properties": {
          "actions": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "created_at": {
            "type": "date"
          },
          "effect": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "id": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "level": {
            "type": "integer"
          },
          "name": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "resources": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      }
    }
  },
  "order": 1,
  "settings": {
    "index": {
      "number_of_replicas": "0",
      "number_of_shards": "1",
      "query.default_field": [
        "policy.name",
        "policy.level",
        "policy.effect"
      ],
      "refresh_interval": "5s"
    }
  }
}
