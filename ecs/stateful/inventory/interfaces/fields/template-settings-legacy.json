{
  "index_patterns": ["wazuh-states-inventory-interfaces*"],
  "order": 1,
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "0",
      "refresh_interval": "2s",
      "query.default_field": [
        "agent.id",
        "agent.name",
        "agent.version",
        "agent.host.ip",
        "host.mac",
        "interface.name",
        "interface.alias",
        "state.modified_at",
        "wazuh.cluster.name",
        "wazuh.cluster.node"
      ]
    }
  }
}
