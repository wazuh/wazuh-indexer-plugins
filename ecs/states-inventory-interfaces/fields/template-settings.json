{
  "index_patterns": [
    "wazuh-states-inventory-interfaces*"
  ],
  "priority": 1,
  "template": {
    "settings": {
      "index": {
        "number_of_shards": "1",
        "number_of_replicas": "0",
        "auto_expand_replicas": "0-1",
        "refresh_interval": "5s",
        "query.default_field": [
          "agent.id",
          "agent.name",
          "agent.version",
          "agent.host.ip",
          "host.mac",
          "interface.name",
          "interface.alias",
          "wazuh.cluster.name",
          "wazuh.cluster.node"
        ]
      }
    }
  }
}
