{
    "index_patterns": [
        "wazuh-states-inventory-groups*"
    ],
    "priority": 1,
    "template": {
        "settings": {
            "index": {
                "number_of_shards": "1",
                "number_of_replicas": "0",
                "refresh_interval": "2s",
                "query.default_field": [
                    "group.name",
                    "group.description",
                    "group.id_signed",
                    "group.uuid",
                    "group.users"
                ]
            }
        }
    }
}