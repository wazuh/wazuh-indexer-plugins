{
  "index_patterns": [
    ".internal-users*",
    "wazuh-custom-users*"
  ],
  "priority": 1,
  "template": {
    "settings": {
      "index": {
        "number_of_shards": "1",
        "number_of_replicas": "0",
        "refresh_interval": "5s",
        "query.default_field": [
            "user.name",
            "user.roles.name",
            "user.roles.policies.name",
            "user.roles.rules.name"
        ]
      }
    }
  }
}
